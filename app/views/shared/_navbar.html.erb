<div class="ga-navbar">

  <div class="nav-logo">
    <%= link_to root_path, class: "small-nav-logo" do %>
      <%= image_tag "globe-logo.png" %>
    <% end %>
  </div>

  <div class="ga-nav-right">
    <% if !user_signed_in? %>
      <div class="sign-up-btn">
        <%= link_to t(".sign_in", default: "Sign up as a Charity"), new_user_registration_path(is_charity: true), class: "sign-up-btn" %>
      </div>
    <% elsif current_user.is_charity? && current_user.verified? %>
      <div class="sign-up-btn">
        <%= link_to "Create a fundraiser", new_fundraiser_path, class: "" %>
      </div>
    <% else %>
      <div class="sign-up-btn">
        <p>thing 1</p>
      </div>
    <% end %>

    <% if !user_signed_in? %>
      <div class="sign-up-btn">
        <%= link_to t(".sign_in", default: "Sign up as a User"), new_user_registration_path(is_charity: false), class: "sign-up-btn" %>
      </div>
    <% else %>
      <div class="sign-in-btn no-wrap">
        <%= link_to "log out", destroy_user_session_path, method: :delete, class: "navbar-GroupAction-item-item navbar-GroupAction-item-link hvr-grow" %>
        </div>
    <% end %>
  </div>

</div>
