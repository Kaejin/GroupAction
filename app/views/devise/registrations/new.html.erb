<div class="form-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">

        <div class="form-box">
          <h2>Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.hidden_field :is_charity, value: params[:is_charity] %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn btn-primary" %>

              <% if devise_mapping.omniauthable? %>
                <% resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook" %><br />
                <% end %>
              <% end %>

            </div>
          <% end %>


            <div class="text-center">
              <%= link_to "Already have an account? Log in", new_session_path(resource_name) %><br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



